﻿@model List<Mobit.Data.Context.Slider>


<div>


    <div class="col-md-4 sliderSearch" style="margin-top:5px;width:300px">
        @{var aramaModel = new Mobit.Models.GelismisAramaModel(); }
        @Html.Partial("/Views/_Partial/_GelismisArama.cshtml", aramaModel)
    </div>

    <div class="slider-container rev_slider_wrapper">
        <div id="revolutionSlider" class="slider rev_slider" data-plugin-revolution-slider data-plugin-options='{"delay": 9000, "gridwidth": 850, "gridheight": 500}'>
            <ul>
                @foreach (var item in Model)
            {
                    <li data-transition="fade">
                        @*<a href="@item.Url" target="@item.Target">*@
                        <img src="~/Upload/slide/@item.Resim"
                             alt="@item.Baslik"
                             title="@item.Baslik"
                             data-bgposition="center center"
                             data-bgfit="cover"
                             data-bgrepeat="no-repeat"
                             class="rev-slidebg" style="width:100%; height:100%">
                        @*</a>*@


                        <div class="tp-caption main-label"
                             data-x="bottom" data-hoffset="0"
                             data-y="center" data-voffset="-30"
                             data-start="1500"
                             data-whitespace="nowrap"
                             data-transform_in="y:[100%];s:500;"
                             data-transform_out="opacity:0;s:500;"
                             style="z-index: 5;color:white;margin-left:10px;"
                             data-mask_in="x:0px;y:0px;"><img src="~/Upload/images/okul34logosu.fw.png"></div>
                        <div class="tp-caption main-label"
                             data-x="bottom" data-hoffset="0"
                             data-y="center" data-voffset="80"
                             data-start="2000"
                             data-whitespace="word-wrap"
                             data-transform_in="y:[100%];s:500;"
                             data-transform_out="opacity:0;s:500;"
                             style="z-index: 5;color:white;margin-left:10px;word-wrap: break-word;font-size:21px "
                             data-mask_in="x:0px;y:0px;">@item.Baslik</div>


                        </li>
                }


            </ul>

        </div>

    </div>


</div>

<div class="row" style="padding-top:7px;padding-left:40px;padding-right:40px;">
    @{Html.RenderAction("Body1", "Home"); }
    @{Html.RenderAction("Body2", "Home"); }


</div>
