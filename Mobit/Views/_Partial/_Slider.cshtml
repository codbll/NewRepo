@model List<Mobit.Data.Context.Slider>

<style>
    .portfolio_description {
        position: absolute;
        width: 50%;
        bottom:50%;
        right:0;
        top:0;
        margin:30px;
        padding:10px;
        background-color: rgba(255, 255, 255, 0.5);
    }
</style>

<div class="header-top header-top-style-2">
    <div class="slider-container rev_slider_wrapper">
        <div id="revolutionSlider">
                @foreach (var item in Model)
            {
                    <div>
                        <a href="@item.Url" target="@item.Target">
                            <img src="~/Upload/slide/@item.Resim"
                                 alt="@item.Baslik"
                                 title="@item.Baslik"
                                 data-bgposition="center center"
                                 data-bgfit="cover"
                                 data-bgrepeat="no-repeat"
                                 class="rev-slidebg" style="width:100%; height:100%">
                            <div>ddadddddddddddddddddd</div>
                        </a>


                        <div class="portfolio_description">
                            
                            <div class="col-md-12">
                                <h2>Arama</h2>
                                @Html.Partial("/Views/_Partial/_Arama.cshtml")
                            </div>

                        </div>
                    </div>
                }
         

           
        </div>
    </div>

 

</div>
    