﻿@model List<Mobit.Data.Context.Slider>


<div style="margin-top:-20px;padding-left:0px;padding-right:0px;">
    <div class="col-md-4 sliderSearch" style="margin-top:5px;width:300px">
        @{var aramaModel = new Mobit.Models.GelismisAramaModel(); }
        @Html.Partial("/Views/_Partial/_GelismisArama.cshtml", aramaModel)
    </div>
    <div class="slider-container rev_slider_wrapper">
        <div id="revolutionSlider" class="slider rev_slider" data-plugin-revolution-slider data-plugin-options='{"delay": 5000, "gridwidth": 850, "gridheight": 560}'>
            <ul>
                @foreach (var item in Model.Where(s => s.SliderId == 1).Take(5).OrderBy(s => s.Sira))
                {
                    <li data-transition="fade">
                        @*<a href="@item.Url" target="@item.Target">*@
                        <img src="~/Upload/slide/@item.Resim"
                             alt="@item.Baslik"
                             title="@item.Baslik"
                             data-bgposition="center center"
                             data-bgfit="cover"
                             data-bgrepeat="no-repeat"
                             class="rev-slidebg" style="width:100%; height:100%">
                        @*</a>*@
                        @if (item.Baslik.Trim() != null)
                        {
                            <div class="tp-caption main-label"
                                 data-x="top" data-hoffset="0"
                                 data-y="top" data-voffset="30"
                                 data-whitespace="word-wrap"
                                 style="z-index: 5;color:white;margin-left:10px;font-size:21px;"><img src="~/Upload/images/okul34logosu.fw.png"></div>

                            string[] fullName = item.Baslik.Trim().Split(';');
                            int sayi = 100;
                            for (int i = 0; i < fullName.Length; i++)
                            {
                                sayi = sayi + 60;
                                if (sayi == 160)
                                {
                                    <div class="tp-caption main-label"
                                         data-x="top" data-hoffset="0"
                                         data-y="top" data-voffset=@sayi
                                         data-whitespace="word-wrap"
                                         style="z-index: 5;color:white;margin-left:10px;font-size:55px;text-align:center;">@fullName[i]</div>
                                }
                                else
                                {
                                    <div class="tp-caption main-label"
                                         data-x="top" data-hoffset="0"
                                         data-y="top" data-voffset=@sayi
                                         data-start="1500"
                                         data-whitespace="word-wrap"
                                         data-transform_in="y:[100%];s:500;"
                                         data-transform_out="opacity:0;s:500;"
                                         style="z-index: 5;color:white;margin-left:10px;font-size:40px;text-align:center;"
                                         data-mask_in="x:0px;y:0px;">@fullName[i]</div>
                                }

                            }
                        }





                    </li>
                }


            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div style="margin-top:-203px;">
        <div class="col-md-12">
            <h4  style="color:#FFFFFF;font-size:24px;font-weight:bold;"><center>By Sponsor</center></h4>
        </div>
        <div class="col-md-12">
            @foreach (var item in Model.Where(s => s.SliderId == 19).Take(6).OrderBy(s => s.Sira))
            {
                <div class="col-md-2" onmouseover="this.style.opacity = 0.6; this.filters.alpha.opacity = 60" onmouseout="this.style.opacity = 1; this.filters.alpha.opacity = 100">
                            <a href="/@item.Url" target="@item.Target">
                                <img class="img-responsive img-circle" title="@item.Baslik" src="~/Upload/slide/@item.Resim" alt="@item.Baslik" data-appear-animation="rotateIn" data-appear-animation-delay="0" data-appear-animation-duration="1s" style="width:200px;height:160px;border:double;border-width:10px;border-color:#FFF;">
                            </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="row" style="margin-top:7px;">
    @{Html.RenderAction("Body1", "Home"); }
    @{Html.RenderAction("Body2", "Home"); }
</div>