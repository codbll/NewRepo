@model Mobit.Models.BodyModel

@* alt slider alanı *@
<div class="row">
    <div class="col-md-7">

        <div class="owl-carousel owl-theme show-nav-hover mt-none owl-loaded owl-drag owl-carousel-init" data-plugin-options="{&quot;items&quot;: 1, &quot;margin&quot;: 10, &quot;loop&quot;: true, &quot;nav&quot;: true, &quot;animateOut&quot;: &quot;fadeOut&quot;}">

            @foreach (var item in Model.Slider)
            {
                <div>
                    <a href="@item.Url" target="@item.Target">
                        <img alt="@item.Baslik" title="@item.Baslik" class="img-responsive img-thumbnail" src="~/Upload/slide/@item.Resim">
                    </a>
                </div>
            }
        </div>


    </div>
    @* sağ reklam alanı *@
    <div class="col-md-5">

        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive img-thumbnail" src="https://placehold.it/500x150" alt="">
            </div>

            <div class="col-md-6" style="padding-right:0px;">
                <img class="img-responsive img-thumbnail" src="https://placehold.it/250x200" width="%100" alt="">
            </div>

            <div class="col-md-6" style="padding-left:0px;">
                <img class="img-responsive img-thumbnail" src="https://placehold.it/250x200" width="%100" alt="">
            </div>
        </div>

    </div>
</div>



