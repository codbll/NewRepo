@model Mobit.Models.HeaderModel
<div class="header-top header-top-style-2">
    <div class="container">
        <div class="row">
            @*üst kayan reklam*@
            <div class="row" style="padding:5px;">
                <div class="owl-carousel owl-theme show-nav-hover" data-plugin-options='{"items": 5, "margin": 10, "loop": true, "nav": true, "dots": false,"autoplay": true, "autoplayTimeout": 3000}'>

                    @foreach (var item in Model.Slider.Where(s => s.SliderId == 3).OrderBy(s => s.Sira))
                    {
                        <div>
                            <a href="@item.Url" target="@item.Target">
                                <span class="thumb-info thumb-info-centered-info">
                                    <span class="thumb-info-wrapper">
                                        <img alt="@item.Baslik" class="img-responsive"  src="~/Upload/slide/@item.Resim" style="height:125px">
                                    </span>
                                </span>
                            </a>
                        </div>
                    }
                </div>
            </div> 

            @*A1 reklam alanı*@
            <div class="row">
                @foreach (var item in Model.Slider.Where(s => s.SliderId == 4).Take(1).OrderBy(s => s.Sira))
                {
                    <div class="col-md-12" style="padding:5px;margin-top:-19px" >
                        <a href="@item.Url" target="@item.Target">
                            <img class="img-responsive img-thumbnail" src="~/Upload/slide/@item.Resim" width="100%" alt="@item.Baslik">
                        </a>
                    </div>
                }
            </div>

            @*A2 A-B reklam alanı*@
            <div class="row">
                @foreach (var item in Model.Slider.Where(s => s.SliderId == 5).Take(2).OrderBy(s => s.Sira))
                {
                    <div class="col-md-6" style="padding:5px;">
                        <a href="@item.Url" target="@item.Target">
                            <img class="img-responsive img-thumbnail" src="~/Upload/slide/@item.Resim" width="100%" alt="@item.Baslik">
                        </a>
                    </div>
                }
            </div>

            @*A3 5 reklam alanı*@
            <div class="row"  style="padding:5px;" >
                <ul class="image-gallery sort-destination full-width">
                    @foreach (var item in Model.Slider.Where(s => s.SliderId == 6).Take(5).OrderBy(s => s.Sira))
                {
                        <li class="isotope-item">
                            <div class="image-gallery-item" style="padding:5px;" >
                                <a href="@item.Url" target="@item.Target">
                                    <span class="thumb-info thumb-info-centered-info">
                                        <span class="thumb-info-wrapper">
                                            <img src="~/Upload/slide/@item.Resim" class="img-responsive img-thumbnail" alt="">
                                        </span>
                                    </span>
                                </a>
                            </div>
                        </li>
                }
                </ul>
            </div>


            </div>



    </div>
</div>




@*kayan 20 haber alanı*@


<div class="header-top"   style="padding:5px;">
        <div class="col-md-1"><h6><strong>HABERLER</strong></h6></div>
        <div class="col-md-11">
            <marquee direction=left>

                <h5>
                    @foreach (var item in Model.Haberler.OrderByDescending(s => s.Id))
                    {
                        <i class="fa fa-newspaper-o"></i><a href="/haber/@item.Slug" title="@item.Ad"> @item.Ad</a>
                    }
                </h5>
            </marquee>
        </div>

</div>
