
<script>
        var sure = 11;   //  Geri sayım sayacının başlayacağı rakam
        function Kontrol() {
            sure = sure - 1;
            $("#span1").text(sure); // <span id="1"> </span> olan yerde geri sayım yapacaktır
            if (sure > 0) setTimeout("Kontrol()", 1000);
        }

        jQuery(document).ready(function () {
            kapat = (sure - 1) * 1000;
            Kontrol();
            setTimeout(function () {
                $("#defaultModal").modal('hide');
                $("#gazze").modal('hide');
            }, kapat); // Popup burda kapanıyor
        });
        window.setTimeout("Kontrol()", 10000);
</script>

