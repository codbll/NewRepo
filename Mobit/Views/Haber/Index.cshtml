@model Mobit.Data.Context.Haberler
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-md-9">
            @*A1 reklam alanı*@
            <div class="row">
                @foreach (var item in ViewData["ustTekReklam"] as List<Mobit.Data.Context.Slider>)
                {
                    <div class="col-md-12" style="padding:7px;margin-top:-10px">
                        <a href="@item.Url" target="@item.Target">
                            <img class="img-responsive img-thumbnail" src="~/Upload/slide/@item.Resim"  alt="@item.Baslik">
                        </a>
                    </div>
                }

            </div>

            <div class="blog-posts">

                <article class="post post-large">

                    <div class="post-content">

                        @{
                            ViewBag.bilgi = Model.Ad;
                        }
                        <h2>@Model.Ad</h2>
                        <p>
                            @Html.Raw(Model.Detay)
                        </p>
                        <p>
                            @if (Model.Id != null && ViewData["HaberlerResim"] != null)
                            {
                                @Html.Partial("/Views/_Partial/_HaberlerGaleri.cshtml", ViewData["HaberlerResim"])
                            }
                        </p>

                    </div>
                </article>


            </div>

        </div>

        <div class="col-md-3">
            <aside class="sidebar">
                @if (Model.KategoriId == 4)
                {
                    Html.RenderAction("SonHaberler", "Haber");
                }
                else if (Model.KategoriId == 3)
                {
                    Html.RenderAction("SonHaberlerRoportajlar", "Haber");
                }
            </aside>
        </div>
    </div>

    <div class="col-md-12">
        <hr />
        @if (ViewData["detayReklam"] != null)
            {
            @*foreach (var item in ViewData["detayReklam"] as List<Mobit.Data.Context.Slider>)
                {
                    <div class="col-md-12">
                        <a href="@item.Url" target="@item.Target">
                            <img class="img-responsive img-thumbnail" src="~/Upload/slide/@item.Resim" width="100%" alt="@item.Baslik">
                        </a>
                    </div>
                }*@

            <div class="col-md-12" style="margin-left:-28px;">
                <ul class="image-gallery sort-destination full-width">

                    @foreach (var item in ViewData["detayReklam"] as List<Mobit.Data.Context.Slider>)
                    {
                        <li class="isotope-item">
                            <div class="image-gallery-item" style="padding:5px;">
                                <a href="@item.Url" target="@item.Target">
                                    <span class="thumb-info thumb-info-centered-info">
                                        <span class="thumb-info-wrapper">
                                            <img src="~/Upload/slide/@item.Resim" class="img-responsive img-thumbnail" alt="@item.Resim" style="height:300px;">
                                        </span>
                                    </span>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>


        }
    </div>
</div>

