@model Mobit.Data.Context.Adminler

@{
    ViewBag.Title = "Profil";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-6">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Profil Bilgilerim <small></small></h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

            </div>
        </div>
        <div class="ibox-content">
            <div>

                <p class="text-left">Profil bilgilerinizi buradan güncelleyebilirsiniz.</p>
                @if (ViewBag.msj != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.msj
                    </div>
                }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.AdminId)
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })

                        @Html.LabelFor(model => model.AdSoyad, new { @class = "control-label pull-left" })

                        @Html.TextBoxFor(model => model.AdSoyad, new { @class = "form-control", @required = "required" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mail, new { @class = "control-label pull-left" })
                        @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })


                        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @required = "required" })
                    </div>

                 
                    <div class="form-group">
                        <div class="col-lg-5">
                            <input type="submit" class="btn btn-primary block full-width m-b" value="Bilgilerimi Güncelle" />
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="col-lg-6">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Şifre Değişikliği</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

            </div>
        </div>
        <div class="ibox-content">

            <p>Şifrenizi buradan değiştirebilirsiniz. </p>
            @if (TempData["sfr"] != null)
            {
                <div class="alert alert-success">
                    @TempData["sfr"]
                </div>
            }
            @using (Html.BeginForm("SifreDegistir", "Uye", FormMethod.Post))
            {
                @Html.AntiForgeryToken();

                @Html.HiddenFor(model => model.AdminId)
                <div class="form-group">
                    @Html.LabelFor(model => model.Sifre, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.Sifre, new { @class = "form-control", @required = "required" })


                        <span class="help-block m-b-none">@Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })</span>
                    </div>
                </div>
                @*<div class="form-group">
                  
                    <label class="col-lg-2 control-label">Şifre Tekrar</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.SifreTekrar, new { @class = "form-control" })
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(model => model.SifreTekrar, "", new { @class = "text-danger" })</span>
                    </div>
                </div>*@

                    <div class="form-group">

                        <div class="col-lg-offset-2 col-lg-5">

                            <input type="submit" class="btn btn-primary block full-width m-b" value="Şifremi Değiştir" />
                        </div>
                    </div>

            }
            <br /><br />
            <br /><br /><br /><br /><br />
        </div>
    </div>
</div>
@section scripts{

    @Scripts.Render("~/admin/bundles/jqueryval")
}
