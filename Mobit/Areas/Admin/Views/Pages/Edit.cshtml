@model Mobit.Data.Context.Sayfalar

@{
    ViewBag.Title = "Sayfa Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Safa Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.KategoriId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <select name="KategoriId" class="form-control">
                    <option value="1" @(Model.KategoriId == 1 ? "selected" : "")>Hakkımızda</option>
                    <option value="2" @(Model.KategoriId == 2 ? "selected" : "")>İletişim</option>
                    <option value="3" @(Model.KategoriId == 3 ? "selected" : "")>Genel</option>

                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GaleriId, "Galeri", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("GaleriId", null, "Galeri Seçimi", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GaleriId, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Slug, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Aktif, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.CheckBoxFor(model => model.Aktif, htmlAttributes: new { @checked = "checked" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Menu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.CheckBoxFor(model => model.Menu, htmlAttributes: new { @checked = "checked" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.iletisimFormu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.CheckBoxFor(model => model.iletisimFormu)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Detay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Detay, new { @class = "form-control ckeditor" })
                @Html.ValidationMessageFor(model => model.Detay, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a href="/Admin/Pages/Delete/@Model.Id" onclick="return confirm('Dikkat: Bu kaydı silmek istediğinizden emin misiniz?')" class="btn btn-danger pull-right">Sil</a>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
    <br />
    <br />
    <br />
    <br />
</div>


@section Scripts {

    @Scripts.Render("~/admin/bundles/jqueryval")

}

