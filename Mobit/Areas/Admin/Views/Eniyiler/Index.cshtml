@model List<Mobit.Data.Context.Kurumlar>
@{
    ViewBag.Title = "Eniyiler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Eniyiler</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>


                </div>
            </div>
            <a class="btn btn-primary" href="/Admin/Eniyiler/Create">Yeni Eniyiler</a>
            <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover dataTables-example" style="width:100%;">
                    <thead>
                        <tr>

                            <th>No</th>
                            <th>Kurum Adı</th>
                            <th>Eniyiler</th>
                            <th>Durum</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Where(i => i.Sponsorlar != null && i.Sponsorlar.Length > 9).ToList())
                        {
                            <tr class="gradeX">


                                <td>@item.KurumId</td>
                                <td>@item.KurumAdi</td>
                                <td>@item.Sponsorlar</td>
                                <td>@(item.Durum == true ? "Aktif" : "Pasif")</td>
                                <td><a href="/Admin/Eniyiler/Edit/@item.KurumId">Güncelle</a></td>


                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/admin/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/admin/plugins/dataTables")
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                "order": [[0, "asc"]],
                "scrollX": true,
                "lengthMenu": [[50, 75, 100, -1], [50, 75, 100, "All"]],
                dom: '<"html5buttons"B>lTfgitp',
                responsive: true,
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Liste' },
                    { extend: 'pdf', title: 'Liste' },


                    {

                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });





        });


    </script>
}



