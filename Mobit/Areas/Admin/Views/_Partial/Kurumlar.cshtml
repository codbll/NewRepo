@model List<Mobit.Data.Context.Kurumlar>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Ürünler</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>


                </div>
            </div>
            <a class="btn btn-primary" href="/Admin/Product/Create">Yeni Ürün Ekle</a>
            <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover dataTables-example" style="width:100%;">
                    <thead>
                        <tr>

                            <th>No</th>
                            <th>Ürün</th>
                            <th>Kategori</th>
                            <th>Alt Kategori</th>
                            <th>Marka</th>
                            <th>Hit</th>
                            <th>Area</th>
                            <th>Depart</th>
                            <th>Aktif</th>
                            <th>İşlem</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">


                                <td><a href="/Admin/Product/Edit/@item.UrunId">@item.UrunId</a></td>
                                <td><a href="/Admin/Product/Edit/@item.UrunId" target="_blank" title="@item.UrunAdi">@item.UrunAdi</a></td>
                                <td>@item.Kategoriler.KategoriAdi</td>
                                <td>@item.AltKategoriler.AltKategoriAdi</td>
                                <td>@item.Markalar.MarkaAdi</td>
                                <td>@item.UrunHit.Count()</td>
                                @if (item.Area == true)
                                {
                                    <td>Aktif</td>
                                }
                                else
                                {
                                    <td><b>Pasif</b></td>
                                }
                                @if (item.Depart == true)
                                {
                                    <td>Aktif</td>
                                }
                                else
                                {
                                    <td><b>Pasif</b></td>
                                }
                                @if (item.Aktif == true)
                                {
                                    <td>Aktif</td>
                                }
                                else
                                {
                                    <td><b>Pasif</b></td>
                                }

                                <td>
                                    <div class="btn-group">
                                        <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle">İşlem <span class="caret"></span></button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="/Admin/Product/Edit/@item.UrunId">Güncelle</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Product/Ozellik/@item.UrunId">Özellikler</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Driver/Index/@item.UrunId">Driver</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Sorular/Index/@item.UrunId">Sık Sorulan Sorular</a>
                                            </li>

                                        </ul>
                                    </div>

                                </td>


                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>