@model List<Mobit.Data.Context.Bulten>
@{
    ViewBag.Title = "Bültene Kayıtlı Mailler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Bültene Kayıtlı Mailler</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>


                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover dataTables-example" style="width:100%;">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Email</th>
                            <th>Ip</th>
                            <th>Tarih</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">

                                <td>@item.Id</td>
                                <td>@item.Mail</td>
                                <td>@item.Ip</td>
                                <td>@item.Tarih</td>

                                <td><a onclick="return confirm('Dikkat bu kaydı silmek istediğinizden emin misiniz?')" href="/Admin/Ayarlar/BultenSil/@item.Id">Sil</a></td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/admin/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/admin/plugins/dataTables")
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                "order": [[0, "desc"]],
                "scrollX": true,
                "lengthMenu": [[50, 75, 100, -1], [50, 75, 100, "All"]],
                dom: '<"html5buttons"B>lTfgitp',
                responsive: true,
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Liste' },
                    { extend: 'pdf', title: 'Liste' },


                    {

                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });





        });


    </script>
}

